<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/style.css">

    <script src="https://kit.fontawesome.com/c55ffa2d10.js" crossorigin="anonymous"></script>
  </head>
  <body>

    <div class="container">

      <!-- HEADER -->
      <div class="header">
        <span class="title">Storage Management <strong>RAN</strong></span>
        <span class="author">developed by BUNLET Damien</span>
      </div>

      <!-- CONTENT -->
      <div class="content">
        <div class="row">
          <!-- Column destinated to search components -->
          <div id="col-search" class="col-xs-12 col-lg-4">
            <input id="search" ondragover=""type="text" name="search" value="" placeholder="Search ..." onkeyup="Search()">
            <ul id="components-list">
            
            </ul>
          </div>
          <!-- Column destinated to manage stockage (component, drawer and storage unit)-->
          <div id="col-manage" class="col-xs-12 col-lg-4">

          </div>
          <!-- Column destinated to show your storage unit -->
          <div id="col-show" class="col-xs-12 col-lg-4">

          </div>
        </div>
      </div>

      <!-- FOOTER -->
      <div class="footer">

      </div>

    </div>

    <script type="text/javascript">
      function Search() {
        // Declare variables
        var input, filter, ul, li, a, i, txtValue;
        input = document.getElementById('search');
        filter = input.value.toUpperCase();
        ul = document.getElementById("components-list");
        li = ul.getElementsByTagName('li');

        // Loop through all list items, and hide those who don't match the search query
        for (i = 0; i < li.length; i++) {
          a = li[i].getElementsByTagName("a")[0];
          txtValue = a.textContent || a.innerText;
          if (txtValue.toUpperCase().indexOf(filter) > -1) {
            li[i].style.display = "";
          } else {
          li[i].style.display = "none";
          }
        }
      }
    </script>

  </body>
</html>
